<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/iv_walletBg"
        android:scaleType="centerCrop"
        android:src="@mipmap/my_wallet_background"
        android:layout_height="@dimen/dp_308"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/rl_1"
        android:layout_height="@dimen/dp_24">
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:scaleType="fitXY"
            android:src="@mipmap/common_icon_back_white_n"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_18"/>
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:text="我的钱包"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_below="@id/rl_1"
         android:id="@+id/rl_2"
         android:layout_marginTop="@dimen/dp_32"
         android:layout_height="wrap_content"
         >
         <ImageView
             android:layout_width="@dimen/dp_116"
             android:layout_centerHorizontal="true"
             android:scaleType="centerCrop"
             android:src="@mipmap/button"
             android:id="@+id/iv_button"
             android:layout_height="@dimen/dp_116"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="0"
             android:textSize="@dimen/sp_40"
             android:id="@+id/tv_walletNum"
             android:textColor="#3087ea"
             android:layout_marginTop="@dimen/dp_20"
             android:layout_centerHorizontal="true"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="H币"
             android:layout_below="@id/tv_walletNum"
             android:layout_centerHorizontal="true"
             android:textSize="@dimen/sp_14"
             android:textColor="#3087ea"
             android:id="@+id/tv_H"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_below="@id/iv_button"
             android:text="金币满800可以体现哦"
             android:textColor="#ffffff"
             android:textSize="@dimen/sp_10"
             android:layout_marginTop="@dimen/sp_10"
             android:layout_centerHorizontal="true"
             android:layout_height="wrap_content"/>
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_below="@id/rl_2"
        android:layout_height="@dimen/dp_30">
        <Button
            android:layout_width="@dimen/dp_58"
            android:text="提现"
            android:textSize="@dimen/sp_14"
            android:textColor="#3087ea"
            android:layout_marginLeft="@dimen/dp_70"
            android:background="@drawable/qiandao_shape"
            android:layout_height="@dimen/dp_30"/>
        <Button
            android:layout_width="@dimen/dp_58"
            android:text="充值"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_70"
            android:background="@drawable/qiandao_shape"
            android:layout_height="@dimen/dp_30"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@id/iv_walletBg"
        android:id="@+id/view"
        android:background="@drawable/view5_shape"
        android:layout_height="@dimen/dp_6"/>
     <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_below="@id/view"
         android:layout_marginLeft="@dimen/dp_20"
         android:id="@+id/rv_wallet"
         android:layout_marginRight="@dimen/dp_20"
         android:layout_marginTop="@dimen/dp_20"
         android:layout_height="wrap_content"/>
</RelativeLayout>