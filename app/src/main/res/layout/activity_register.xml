<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_67"
        android:src="@drawable/log_logo"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/dp_64"/>
       <androidx.cardview.widget.CardView
           android:layout_width="@dimen/dp_280"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/dp_60"
           app:cardElevation="@dimen/dp_10"
           app:cardMaxElevation="@dimen/dp_5"
           app:cardCornerRadius="@dimen/dp_10"
           android:layout_height="@dimen/dp_400">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/dp_30"
               android:layout_marginTop="@dimen/dp_30"
               android:layout_marginBottom="@dimen/dp_20"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_34"
                   android:layout_marginTop="@dimen/dp_20"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_24"
                       android:src="@drawable/email"
                       android:scaleType="fitXY"
                       android:id="@+id/iv_RegEmail"
                       android:layout_gravity="center"
                       android:layout_height="@dimen/dp_24"/>
                   <EditText
                       android:layout_width="match_parent"
                       android:hint="请输入邮箱"
                       android:textColor="#999999"
                       android:id="@+id/et_RegEmail"
                       android:paddingBottom="10dp"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_marginLeft="@dimen/dp_34"
                       android:textSize="@dimen/sp_14"
                       android:layout_height="wrap_content"/>
                    <Button
                        android:layout_width="@dimen/dp_60"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_30"
                        android:text="获取验证码"
                        android:id="@+id/bt_getEmailCode"
                        android:textColor="#ffffff"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@drawable/login_bt_shape"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/dp_20"/>
               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_34"
                   android:layout_marginTop="@dimen/dp_16"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_24"
                       android:src="@drawable/safe"
                       android:scaleType="fitXY"
                       android:layout_gravity="center"
                       android:layout_height="@dimen/dp_24"/>
                   <EditText
                       android:layout_width="match_parent"
                       android:layout_marginRight="@dimen/dp_30"
                       android:hint="请输入验证码"
                       android:id="@+id/et_emailCode"
                       android:textColor="#999999"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:textSize="@dimen/sp_14"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_34"
                   android:layout_marginTop="@dimen/dp_20"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_24"
                       android:src="@drawable/lock"
                       android:scaleType="fitXY"
                       android:id="@+id/iv_lock"
                       android:layout_gravity="center"
                       android:layout_height="@dimen/dp_24"/>
                   <EditText
                       android:layout_width="match_parent"
                       android:hint="请输入密码"
                       android:textColor="#999999"
                       android:id="@+id/et_RegPwd1"
                       android:password="true"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_marginLeft="@dimen/dp_34"
                       android:textSize="@dimen/sp_14"
                       android:layout_height="wrap_content"/>
                   <CheckBox
                       android:layout_width="@dimen/dp_17"
                       android:id="@+id/cb_pwd1"
                       android:button="@null"
                       android:background="@drawable/pwd_eye_selecter"
                       android:checked="false"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_height="@dimen/dp_17"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_34"
                   android:layout_marginTop="@dimen/dp_20"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_24"
                       android:src="@drawable/lock"
                       android:scaleType="fitXY"
                       android:layout_gravity="center"
                       android:layout_height="@dimen/dp_24"/>
                   <EditText
                       android:layout_width="match_parent"
                       android:hint="请再次输入密码"
                       android:textColor="#999999"
                       android:id="@+id/et_RegPwd2"
                       android:password="true"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_marginLeft="@dimen/dp_34"
                       android:textSize="@dimen/sp_14"
                       android:layout_height="wrap_content"/>
                   <CheckBox
                       android:layout_width="@dimen/dp_17"
                       android:id="@+id/cb_pwd2"
                       android:button="@null"
                       android:background="@drawable/pwd_eye_selecter"
                       android:checked="false"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_height="@dimen/dp_17"/>
               </RelativeLayout> <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_34"
                   android:layout_marginTop="@dimen/dp_20"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_24"
                       android:src="@mipmap/register_icon_invitatiion_code_n"
                       android:scaleType="fitXY"
                       android:layout_gravity="center"
                       android:layout_height="@dimen/dp_24"/>
                   <EditText

                       android:layout_width="match_parent"
                       android:hint="请输入邀请码"
                       android:textColor="#999999"
                       android:password="true"
                       android:layout_marginRight="@dimen/dp_30"
                       android:layout_marginLeft="@dimen/dp_34"
                       android:textSize="@dimen/sp_14"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="选填"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_30"
                        android:textSize="@dimen/sp_10"
                       android:textColor="#333333"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
               <Button
                   android:layout_width="@dimen/dp_220"
                   android:layout_marginTop="@dimen/dp_26"
                   android:textSize="@dimen/sp_14"
                   android:text="注册"
                   android:id="@+id/bt_register"
                   android:background="@drawable/login_bt_shape"
                   android:textColor="#ffffff"
                   android:layout_height="@dimen/dp_36"
                   android:layout_marginBottom="@dimen/dp_20"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>
</LinearLayout>