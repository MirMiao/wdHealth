<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/my_background"
        android:layout_height="@dimen/dp_170" />
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_24"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:scaleType="fitXY"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_icon_back_white_n"
            android:layout_height="@dimen/dp_16"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_24"
            android:src="@mipmap/common_nav_message_white_n"
            android:layout_height="@dimen/dp_24"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/rl_2"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_1"
        >
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:src="@mipmap/girl"
            android:id="@+id/iv_headPic"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_userName"
            android:text="欧若拉"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/iv_headPic"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="@dimen/dp_58"
            android:text="签到"
            android:id="@+id/bt_sign"
            android:textSize="@dimen/sp_14"
            android:textColor="#3087ea"
            android:layout_centerVertical="true"
            android:background="@drawable/qiandao_shape"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_30"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/rl_2"
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/rl_3"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_190">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardElevation="5dp"
          app:cardUseCompatPadding="true"
          app:cardCornerRadius="@dimen/dp_10"
          android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/dp_20"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:text="我的问诊"
                  android:textSize="@dimen/sp_16"
                  android:textColor="#333333"
                  android:layout_height="wrap_content"/>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/dp_24"
                  android:layout_height="@dimen/dp_40">
                  <ImageView
                      android:layout_width="@dimen/dp_40"
                      android:src="@mipmap/the_current_inquiry"
                      android:layout_height="@dimen/dp_40"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:text="当前问诊"
                      android:layout_marginLeft="@dimen/dp_60"
                      android:textSize="@dimen/sp_14"
                      android:textColor="#333333"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"/>
                  <ImageView
                      android:layout_width="@dimen/dp_20"
                      android:src="@drawable/next1"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="@dimen/dp_20"/>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/sp_10"
                  android:layout_height="@dimen/dp_40">
                  <ImageView
                      android:layout_width="@dimen/dp_40"
                      android:src="@mipmap/historical_inquiry"
                      android:layout_height="@dimen/dp_40"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:text="历史问诊"
                      android:layout_marginLeft="@dimen/dp_60"
                      android:textSize="@dimen/sp_14"
                      android:textColor="#333333"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"/>
                  <ImageView
                      android:layout_width="@dimen/dp_20"
                      android:src="@drawable/next1"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="@dimen/dp_20"/>
              </RelativeLayout>
          </LinearLayout>
      </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_userList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/rl_3"

        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
         />
    <TextView
        android:layout_width="wrap_content"
        android:text="©八维移动通信学院毕业作品"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content"/>

</RelativeLayout>