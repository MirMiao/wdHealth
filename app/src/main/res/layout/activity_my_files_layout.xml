<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"

        android:layout_height="@dimen/dp_24">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:scaleType="fitXY"
            android:src="@drawable/back_block"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_24"/>
        <TextView
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:text="我的档案"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
   <ImageView
       android:layout_marginTop="@dimen/dp_10"
       android:layout_width="match_parent"
       android:background="@drawable/view5_shape"
       android:layout_height="@dimen/dp_5"/>
     <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/dp_20"
         android:visibility="gone"
         android:layout_marginRight="@dimen/dp_20"
         android:layout_marginTop="@dimen/dp_20"
         android:layout_height="match_parent"/>


      <RelativeLayout
          android:layout_width="match_parent"
          android:visibility="gone"
          android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/dp_100"
               android:layout_centerInParent="true"
               android:id="@+id/iv_noMessage"
               android:src="@mipmap/no_message"
               android:layout_height="@dimen/dp_100"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="您还没有档案哦"
              android:layout_below="@id/iv_noMessage"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="@dimen/dp_10"
              android:textColor="#333333"
              android:layout_height="wrap_content"/>
          <Button
              android:layout_width="@dimen/dp_280"
              android:text="添加"
              android:background="@drawable/login_bt_shape"
              android:layout_alignParentBottom="true"
              android:textColor="#ffffff"
              android:layout_centerHorizontal="true"
              android:textSize="@dimen/sp_16"
              android:layout_marginBottom="@dimen/dp_40"
              android:layout_height="@dimen/dp_40"/>
      </RelativeLayout>
     <LinearLayout
         android:visibility="visible"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/dp_20"
         android:layout_marginRight="@dimen/dp_20"
         android:orientation="vertical"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="wrap_content"
             android:text="[主要症状]"
             android:textColor="#3087ea"
             android:layout_marginTop="@dimen/dp_20"
             android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="面神经炎"
              android:textColor="#333333"
              android:textSize="@dimen/sp_12"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="[现病史]"
             android:layout_marginTop="@dimen/dp_20"
             android:textColor="#3087ea"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:textColor="#333333"
             android:layout_marginTop="@dimen/dp_10"
             android:textSize="@dimen/sp_12"
             android:text="说的就是看是扩大了就散了打开了解到刷卡就开了奥斯卡来得及卡拉三等奖卡萨丁就卡胜利大街卡胜利大街阿斯利康简答考试了家上课了的就撒困了就萨克来得及萨克雷的就散了"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="[既往病史]"
             android:layout_marginTop="@dimen/dp_20"
             android:textColor="#3087ea"
             android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="无"
              android:layout_marginTop="@dimen/dp_10"
              android:textColor="#333333"
              android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="[治疗经历]"
             android:layout_marginTop="@dimen/dp_20"
             android:textColor="#3087ea"
             android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:textSize="@dimen/sp_12"
              android:layout_marginTop="@dimen/dp_10"
              android:textColor="#333333"
              android:text="是ad卡啥手机代课老师阿萨德卡萨丁离开家萨克雷及阿杀了看得见按实际抵抗力撒娇的喀什东路阿珂"
              android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="[相关图片]"
             android:layout_marginTop="@dimen/dp_20"
             android:textColor="#3087ea"
             android:layout_height="wrap_content"/>
         <ImageView
             android:src="@mipmap/ic_launcher"
             android:layout_marginTop="@dimen/dp_10"
             android:scaleType="centerCrop"
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_144"/>
         <RelativeLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/dp_30"
             android:layout_height="wrap_content">
             <Button
                 android:layout_width="@dimen/dp_84"
                 android:text="删除"
                 android:background="@drawable/delete_shape"
                 android:layout_marginLeft="@dimen/dp_60"
                 android:textColor="#ffffff"
                 android:textSize="@dimen/sp_14"
                 android:layout_height="@dimen/dp_34"/>
             <Button
                 android:layout_width="@dimen/dp_84"
                 android:text="编辑"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/dp_60"
                 android:background="@drawable/edit_shape"
                 android:textSize="@dimen/sp_14"
                 android:textColor="#ffffff"
                 android:layout_height="@dimen/dp_34"/>
         </RelativeLayout>
     </LinearLayout>
</LinearLayout>