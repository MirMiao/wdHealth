<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ImageView
       android:layout_width="@dimen/dp_67"
       android:src="@drawable/log_logo"
       android:layout_marginTop="@dimen/dp_46"
       android:layout_gravity="center_horizontal"
       android:layout_height="@dimen/dp_64"/>
   <androidx.cardview.widget.CardView
       app:ycStartShadowColor="#ffffff"
       android:layout_width="@dimen/dp_280"
       android:layout_marginTop="@dimen/dp_60"
       app:cardElevation="@dimen/dp_10"
       app:cardMaxElevation="@dimen/dp_5"
       app:cardCornerRadius="@dimen/dp_10"
       android:layout_gravity="center_horizontal"
       android:layout_height="@dimen/dp_218">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="@dimen/dp_24"
               android:src="@drawable/email"
               android:scaleType="fitXY"
               android:layout_gravity="center"
               android:layout_height="@dimen/dp_24"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_marginRight="@dimen/dp_30"
               android:hint="请输入邮箱"
               android:id="@+id/et_email"
               android:textColor="#999999"
               android:layout_marginLeft="@dimen/dp_10"
               android:textSize="@dimen/sp_14"
               android:layout_height="wrap_content"/>
        </LinearLayout>
       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
           android:layout_marginTop="@dimen/dp_20"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="@dimen/dp_24"
               android:src="@drawable/lock"
               android:scaleType="fitXY"
               android:id="@+id/iv_lock"
               android:layout_gravity="center"
               android:layout_height="@dimen/dp_24"/>
           <EditText
               android:layout_width="match_parent"
               android:hint="请输入密码"
               android:textColor="#999999"
               android:id="@+id/et_pwd"
               android:password="true"
               android:layout_marginRight="@dimen/dp_30"
               android:layout_marginLeft="@dimen/dp_34"
               android:textSize="@dimen/sp_14"
               android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="@dimen/dp_17"
                android:id="@+id/iv_pwd"
                android:button="@null"
                android:background="@drawable/pwd_eye_selecter"
                android:checked="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_height="@dimen/dp_17"/>
        </RelativeLayout>
       <Button
           android:layout_width="@dimen/dp_220"
          android:layout_marginTop="@dimen/dp_36"
           android:textSize="@dimen/sp_14"
           android:text="登陆"
           android:id="@+id/bt_login"
           android:background="@drawable/login_bt_shape"
           android:textColor="#ffffff"
           android:layout_height="@dimen/dp_36"
          android:layout_marginBottom="@dimen/dp_20"/>
    </LinearLayout>
   </androidx.cardview.widget.CardView>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/dp_50"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="忘记密码"
            android:id="@+id/tv_forgetPwd"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="暂无账号？"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_100"
            android:textSize="@dimen/sp_10"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/dp_50"
            android:text="立即注册"
            android:id="@+id/tv_rightReg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_50"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"/>
     </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_120"
        android:text="一一一一其他登陆方式一一一一"
        android:layout_height="wrap_content"/>
   <ImageView
       android:layout_width="@dimen/dp_24"
       android:layout_marginTop="@dimen/dp_15"
       android:layout_gravity="center_horizontal"
       android:id="@+id/iv_wxLog"
       android:layout_marginBottom="@dimen/dp_30"
       android:src="@mipmap/login_icon_weixin_white_n"
       android:layout_height="@dimen/dp_24"/>
</LinearLayout>